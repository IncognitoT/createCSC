---------------------------- EX6 - 1  ------------------------------
def vandermonde(n):
    
    
    table = [[0 for c in range(n)] for r in range(n)]
    
    for i in range(n):
        
        for k in range(n):
            
            table[i][k] = (i+1)**k
            
    return table
 -------------------------------- EX6 - 2  ------------------------------
 arr3 = vandermonde(6)
 for i in range(len(arr3)):
        
    for k in range(len(arr3[0])):
            
        if arr3[i][k] % 2 !=0 :
            
            arr3[i][k] = -1
