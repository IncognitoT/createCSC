----------------------- EX4 - 1 ------------------------
def signature(text):
    
    strToConcat = ' EPITA.'
    
    opText = text + strToConcat
    
    return opText
------------------------- EX4 - 2 ------------------------------
def delete_signature(text):
    
    strToDel = ' EPITA.'
    
    OpStr = ''
    
    if strToDel in text:
        
        OpStr = text.replace(strToDel,'')
        
        return OpStr
        
    else:
        
        return text
